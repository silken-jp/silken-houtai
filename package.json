{
  "name": "root",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "use": "node ./scripts/use",
    "tsc": "yarn workspace @silken-houtai/core tsc",
    "format": "prettier --write '**/*.{js,jsx,tsx,ts,less,md,json}'"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "devDependencies": {
    "inquirer": "9.1.4",
    "lint-staged": "13.1.2",
    "prettier": "2.8.4",
    "typescript": "4.9.5",
    "yorkie": "2.0.0"
  }
}
